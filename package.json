{
  "name": "polygon-intersection",
  "author": {
    "name": "Varjak"
  },
  "description": "A library for finding the intersection of two polygons",
  "homepage": "https://github.com/varjak/polygon-intersection-helper",
  "license": "MIT",
  "private": false,
  "version": "0.0.0-development",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/main.umd.cjs",
  "module": "./dist/main.js",
  "typings": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.umd.cjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsc && vite build --watch",
    "test": "vitest",
    "lint": "eslint src test --fix",
    "prepare": "npm run build",
    "commit": "git-cz",
    "semantic-release": "semantic-release --branches main"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "semantic-release": "^23.0.8",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/varjak/polygon-intersection-helper.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}