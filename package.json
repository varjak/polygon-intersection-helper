{
  "name": "polygon-intersection",
  "author": {
    "name": "Varjak"
  },
  "description": "A library for finding the intersection of two polygons",
  "homepage": "https://github.com/varjak/polygon-intersection-helper",
  "license": "MIT",
  "private": false,
  "version": "0.0.0-development",
  "exports": {
    ".": {
      "import": "./dist/main.es.js",
      "require": "./dist/main.cjs.js"
    }
  },
  "main": "./dist/main.cjs.js",
  "module": "./dist/main.es.js",
  "typings": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsc && vite build --watch",
    "test": "vitest",
    "lint": "eslint src test --fix",
    "semantic-release": "semantic-release --branches main"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@release-it/bumper": "^6.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.10",
    "vitest": "^1.5.0",
    "semantic-release": "^23.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/varjak/polygon-intersection-helper.git"
  }
